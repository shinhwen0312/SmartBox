<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNormalPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary</item>
        <item name="colorAccent">@color/colorHighlight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#4A89DC</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#CCD1D9
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#4A89DC
        </item>
    </style>

</resources>
